<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_medium">

    <ImageView
        android:id="@+id/iv_noteItem_importance"
        android:layout_width="40dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@sample/colors"/>
    <TextView
        android:id="@+id/tv_noteItem_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_noteItem_importance"
        app:layout_constraintStart_toEndOf="@id/iv_noteItem_importance"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@tools:sample/lorem"
        android:maxLines="1"
        android:textSize="@dimen/textSize_noteItem_title"
        android:layout_marginStart="@dimen/margin_small"/>
    <TextView
        android:id="@+id/tv_noteItem_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_noteItem_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_noteItem_importance"
        app:layout_constraintStart_toEndOf="@id/iv_noteItem_importance"
        app:layout_constraintEnd_toEndOf="@id/tv_noteItem_title"
        android:textSize="@dimen/textSize_noteItem_details"
        android:maxLines="2"
        android:layout_marginStart="@dimen/margin_small"
        tools:text="@tools:sample/lorem/random"/>

</androidx.constraintlayout.widget.ConstraintLayout>